<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10_dp">

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/dimen_18_sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Информация о композиции"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dp"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/dimen_10_dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_18_sp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimen_10_dp"
        tools:text="@string/song_dialog_title"/>

    <TextView
        android:id="@+id/singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_18_sp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimen_5_dp"
        tools:text="@string/song_dialog_singer"/>

    <TextView
        android:id="@+id/album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_18_sp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimen_5_dp"
        tools:text="@string/song_dialog_album"/>

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_18_sp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimen_5_dp"
        tools:text="@string/song_dialog_year"/>

    <TextView
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_18_sp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimen_5_dp"
        tools:text="@string/song_dialog_genre"/>

</androidx.appcompat.widget.LinearLayoutCompat>