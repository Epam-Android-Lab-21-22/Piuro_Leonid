<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/dimen_6_dp"
    android:paddingStart="@dimen/dimen_50_dp">

    <ImageView
        android:id="@+id/trophyImage"
        android:layout_width="@dimen/dimen_40_dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/english_premiere_league"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/trophyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16_dp"
        android:layout_marginEnd="@dimen/dimen_16_dp"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_16_sp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintBottom_toBottomOf="@+id/trophyImage"
        app:layout_constraintEnd_toStartOf="@+id/trophyDeleteButton"
        app:layout_constraintStart_toEndOf="@+id/trophyImage"
        app:layout_constraintTop_toTopOf="@+id/trophyImage"
        tools:text="@string/english_premier_league" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/trophyDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:tint="@color/color_primary"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintBottom_toBottomOf="@+id/trophyName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/trophyName" />

</androidx.constraintlayout.widget.ConstraintLayout>
