<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_10_dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_18_sp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/dimen_10_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/play_button"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/item_song_title_tools" />

    <TextView
        android:id="@+id/singer"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        android:textSize="@dimen/dimen_14_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="@string/item_song_singer_tools" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:backgroundTint="@color/light_grey"
        app:fabCustomSize="@dimen/dimen_40_dp"
        app:layout_constraintBottom_toBottomOf="@+id/singer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title"
        android:src="@drawable/lb_ic_play" />

</androidx.constraintlayout.widget.ConstraintLayout>