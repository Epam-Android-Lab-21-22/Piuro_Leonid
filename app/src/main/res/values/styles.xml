<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textViewPrimary" parent="textView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textViewOnlineStatus" parent="textView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/online_status</item>
    </style>

    <style name="textViewCounterText" parent="textView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:backgroundTint">@color/menu_button</item>
    </style>

    <style name="circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="progressBar">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/background_progress_bar</item>
    </style>

</resources>